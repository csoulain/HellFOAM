FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      setFieldsDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

defaultFieldValues
(
    volScalarFieldValue alpha 0
);

regions
(
    boxToCell
    {
//        box (0 0 0) (0.0004 0.001 0.0001);
        box (-0.003 0 0) (-0.0028 0.001 0.0002);
        fieldValues
        (
            volScalarFieldValue alpha 1
        );
    }
);


